{
  "description": "Intercept legacy Python/pip commands and suggest uv alternatives",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/intercept-legacy-python.sh\""
          }
        ]
      }
    ]
  }
}
